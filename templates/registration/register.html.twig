{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<h1 class="text-center registration-title">Register</h1>

	<form class="registration-form col-6 row d-flex justify-content-center mt-5" method="post">
		<div class="col-md-12">
			<div class="login-card py-1">
				<div class="form-data">
					<div class="login-forms-inputs mb-4">
						{{ form_start(registrationForm) }}
						{{ form_row(registrationForm.email) }}
						{{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
						{{ form_row(registrationForm.agreeTerms) }}


						<button type="submit" class="btn btn-primary
							                            login-btn w-100">Register</button>
						{{ form_end(registrationForm) }}
					</div>
				</div>
			</div>
		</div>
	</form>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('login') }}
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Recipe index{% endblock %}

{% block body %}
    <h1>Recipe index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>NbPeople</th>
                <th>PrepTime</th>
                <th>CookingTime</th>
                <th>Ingredient</th>
                <th>Step</th>
                <th>Picture</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
            <tr>
                <td>{{ recipe.id }}</td>
                <td>{{ recipe.name }}</td>
                <td>{{ recipe.nbPeople }}</td>
                <td>{{ recipe.prepTime }}</td>
                <td>{{ recipe.cookingTime }}</td>
                <td>{{ recipe.ingredient }}</td>
                <td>{{ recipe.step }}</td>
                <td>{{ recipe.picture }}</td>
                <td>
                    <a href="{{ path('app_recipe_crud_show', {'id': recipe.id}) }}">show</a>
                    <a href="{{ path('app_recipe_crud_edit', {'id': recipe.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_recipe_crud_new') }}">Create new</a>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Recipe{% endblock %}

{% block body %}
    <h1>Recipe</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recipe.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ recipe.name }}</td>
            </tr>
            <tr>
                <th>NbPeople</th>
                <td>{{ recipe.nbPeople }}</td>
            </tr>
            <tr>
                <th>PrepTime</th>
                <td>{{ recipe.prepTime }}</td>
            </tr>
            <tr>
                <th>CookingTime</th>
                <td>{{ recipe.cookingTime }}</td>
            </tr>
            <tr>
                <th>Ingredient</th>
                <td>{{ recipe.ingredient }}</td>
            </tr>
            <tr>
                <th>Step</th>
                <td>{{ recipe.step }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ recipe.picture }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_recipe_crud_index') }}">back to list</a>

    <a href="{{ path('app_recipe_crud_edit', {'id': recipe.id}) }}">edit</a>

    {{ include('recipe_crud/_delete_form.html.twig') }}
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Nos recettes
{% endblock %}

{% block body %}


	<div class="container container-card">
		<div class="row d-flex justify-content-start">
			<h1 class="text-center card-title">Nos recettes</h1>
		</div>
		<!--SEARCH TOOL STARTS-->
		<div class="topnav d-flex justify-content-center mt-5 mb-5">
		<label for="name" class="m-2">Recherche :</label>
			<input id="keyword" type="search" name="name" placeholder="saisissez ici votre recherche...">
		</div>
		<!--SEARCH TOOL ENDS-->
		<div class="container container-lg">
			<div class="row justify-content-around" id="dish-card-container">
				{% for recipe in recipes %}
					<div class="undetailed-dish-card card col-6 col-md-4 d-flex flex-column p-2 p-lg-4 m-3 dishes" id="{{ recipe.id }}">

						<img src="{{ asset('build/images/dishes/' ~ recipe.pictureOne ~ '.jpg') }}" class="dish-card-image" alt="dish picture">
						<div class="m-0 p-0 d-flex flex-column justify-content-between mb-3">
							<h3 class="m-0 dishes">{{ recipe.name }}</h3>
							<p class="card-text dishes">(Spécialité
								{{ recipe.cuisine.name }})
							</p>
							<p class="card-text">{{ recipe.nbPeople }}
								personnes</p>
							<p class="card-text">Prép. :
								{{ recipe.prepTime }}
								min.</p>
							<p class="card-text">Cuisson :
								{{ recipe.cookingTime }}
								min.</p>
							<a href="{{ path('app_recipe_show', {'id': recipe.id}) }}" class="position-absolute bottom-0 start-50 translate-middle-x btn btn-primary">Voir la recette</a>

						</div>
						<div class="d-flex flex-column flex-sm-row align-items-baseline mt-1 p-0 justify-content-between"></div>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
</div>{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('search') }}
	{{ encore_entry_script_tags('app') }}
{% endblock %}
